# Etap 1: Budowanie i Testowanie
FROM node:20 AS build
WORKDIR /app

# Instalacja zależności systemowych dla przeglądarki Chrome (wymagane do testów)
RUN apt-get update && apt-get install -y chromium

COPY package*.json ./
RUN npm install
COPY . .

# Uruchomienie testów przed budowaniem wersji produkcyjnej
# Jeśli testy zawiodą, cały proces budowania zostanie przerwany
RUN npx ng test --watch=false --browsers=ChromeHeadless

# Budowanie wersji produkcyjnej
RUN npm run build -- --configuration production

# Etap 2: Serwowanie (Nginx)
FROM nginx:stable-alpine
COPY --from=build /app/dist/frontend/browser /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]